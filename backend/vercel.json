{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/api/users(.*)",
      "dest": "/api/users$1"
    },
    {
      "src": "/api/category(.*)",
      "dest": "/api/category$1"
    },
    {
      "src": "/api/products(.*)",
      "dest": "/api/products$1"
    },
    {
      "src": "/api/upload(.*)",
      "dest": "/api/upload$1"
    },
    {
      "src": "/api/orders(.*)",
      "dest": "/api/orders$1"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "index.js" }]
}
