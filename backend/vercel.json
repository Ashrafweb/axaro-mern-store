{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/api/users(.*)",
      "dest": "/api/users$1"
    },
    {
      "src": "/api/category(.*)",
      "dest": "/api/category$1"
    },
    {
      "src": "/api/products(.*)",
      "dest": "/api/products$1"
    },
    {
      "src": "/api/upload(.*)",
      "dest": "/api/upload$1"
    },
    {
      "src": "/api/orders(.*)",
      "dest": "/api/orders$1"
    },
    {
      "src": "/api/:path*",
      "dest": "/api/:path*",
      "headers": {
        "Access-Control-Allow-Origin": "https://axaro-mern-store-gf45pl23r-ashrafwebs-projects.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    }
  ]
}
